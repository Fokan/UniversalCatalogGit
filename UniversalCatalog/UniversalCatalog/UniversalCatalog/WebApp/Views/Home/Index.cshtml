@{
    ViewBag.Title = "Home Page";
}
@model IEnumerable<WebApp.Models.Entities.Type>

<div class="container" style="margin-top:10px; padding:0;">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @{ var n = 0;}
            @foreach (var path in ViewBag.Paths)
            {
                if (n == 0)
                {
                    <li data-target="#carousel-example-generic" data-slide-to="@n" class="active"></li>
                }
                else
                {
                    <li data-target="#carousel-example-generic" data-slide-to="@n"></li>
                }
                n++;
            }
        </ol>
        <div class="carousel-inner">
            @{ n = 0;}
            @foreach (var path in ViewBag.Paths)
            {
                if (n == 0)
                {
                <div class="item active">
                    <img src="@path" alt="...">
                    <div class="carousel-caption">
                    </div>
                </div>
                }
                else
                {
                    <div class="item">
                        <img src="@path" alt=" ...">
                        <div class="carousel-caption">
                        </div>
                    </div>
                }
                n++;
            }
        </div>
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
</div>

<center><h1>@ViewBag.ParentName</h1></center>

<div id="Types">
    @foreach (var type in Model)
    {
        <a href="/Home/GetContent?TypeId=@type.Id">
            <div class="typeBox">
                @if (type.Image != null)
                {
                    <img src="@Url.Action("GetImage", "Home", new { ImageId = type.Image.Id })" alt="@type.Image.Name" />
                }
                else
                {
                    <img src="~/Content/Sources/default.jpg" alt="default" />
                }
                <div style="text-align:center;">
                    <h3>@type.Name</h3>
                </div>
            </div>
        </a>
    }
</div>

<style>
    .typeBox
    {
        display:inline-block;
        width:160px;
        height:160px;
        margin:10px;
        text-align:center;
        position:relative;
    }
    .typeBox div
    {
        position:absolute;
        left:20px;
        top:20px;
        bottom:20px;
        right:20px;
        background:white;
        opacity:0.7;
        text-align:center;
        align-content:space-between;
        padding:5%;
    }
    .typeBox img
    {
        height:160px;
        width:160px;
        border-radius:8px;
        -moz-border-radius:8px;
        -webkit-border-radius:8px;
        box-shadow: 0 15px 15px rgba(0,0,0, 0.55);
        -moz-box-shadow: 0 15px 15px rgba(0,0,0, 0.55);
        -webkit-box-shadow: 0 15px 15px rgba(0,0,0, 0.55);
    }
    #Types
    {
        display:flex;
	    flex-wrap:wrap;
	    align-content:space-around;
	    justify-content:center;
    }
</style>